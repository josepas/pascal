program blah;

type
  hora = 00..23;
  minSeg = 00..59;
  
  horaMilitar = record
    seg : minSeg;
    min : minSeg;
    hr  : hora;
  end;
  
var
  militar : horaMilitar;
    
begin

  writeln;

  write('Ingrese hora militar(HH/MM/SEG): ');
  read(militar.hr, militar.min, militar.seg);
  
  if militar.seg = 59 then
    begin
      militar.seg := 00;
      if militar.min := 59 then
	begin
	  militar.min := 00;
	  if militar.hr = 23 then
	    begin
	      militar.hr := 00;
	    end;
	end;
    end
  else
    begin
      militar.seg := militar.seg + 1;
  end;
    
  
  
  writeln;
  writeln;

end.
